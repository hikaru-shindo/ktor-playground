root = true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4
max_line_length=120

[*.{kt,kts}]
ktlint_code_style=ktlint_official
ktlint_experimental=false
ktlint_disabled_rules=no-wildcard-imports

[*.{json,json5}]
indent_size=2

[*.{yml,yaml}]
indent_size=2
